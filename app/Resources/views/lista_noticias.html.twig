{% for noticia in noticias %}

	<div class="container-fluid">
       	
       	{% if noticia.tipoMedia %}
       		<img class="img-fluid" src="{{noticia.media}}" alt="Card image cap">
       	{% else %}
       		<div class="embed-responsive embed-responsive-16by9">
       			<iframe class="embed-responsive-item" src="{{noticia.media}}" frameborder="0" allowfullscreen></iframe>
       		</div>
		{% endif %}
		
		<div id="noticia" class="alert alert-success">
			<h6>Fuente: {{noticia.fuente}}</h6>
			<hr>
			<h1><a href="{{ path('noticia_completa', {
				'desc_categoria': categoria.descripcion,
				'titular_noticia': noticia.titular | formato_url
			}) }}">{{noticia.titular}}</a></h1>
			<h2>{{noticia.clave | nl2br }}</h2>
			<h3>{{noticia.autor ~ ' ' ~ noticia.fecha | date("d/m/Y H:i") ~ 'h' }}</h3>
		</div>
	</div>
	<hr>
{% endfor %}
