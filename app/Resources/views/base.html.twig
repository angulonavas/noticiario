            <!-- Carga hoja de estilos entre una resolucion maxima y minima -->
            <link rel="stylesheet" media="screen and (min-width: 100px) and (max-width: 1200px)" href="{{ asset('base/css/estilos_movil.css') }}" />
            
            <!-- <link rel="stylesheet" href="{{ asset('magic-master/magic.css') }}" type="text/css"> -->

        {% endblock %}

    </head>
